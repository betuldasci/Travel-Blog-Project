@model IEnumerable<TravelBlog3.Models.City>
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!-- Navbar -->
<div id="cityCarousel" class="carousel slide" data-ride="carousel" data-interval="1500">
    <div class="carousel-inner">
        @{
            int count = 0;
            foreach (var city in Model)
            {
                <div class="carousel-item @(count == 0 ? "active" : "")">
                    <img style="width: 100%; height: 500px;" src="@city.ImageUrl" class="d-block w-100" alt="@city.Name">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@city.Name</h5>
                    </div>
                </div>
                count++;
            }
        }
    </div>
    <a class="carousel-control-prev" href="#cityCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#cityCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h4>Recent Blogs</h4>
            @Html.Action("Recent", "City")
        </div>
    </div>
    <div class="row">
        @foreach (var city in Model.Take(2))
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <img style="width: 100%; height: 200px; border-radius: 10px;" src="@city.ImageUrl" class="card-img-top" alt="@city.Name">
                    <div class="card-body">
                        <h5 class="card-title">@city.Name</h5>
                        <a href="@Url.Action("Blogs", "City", new { id = city.Id })" class="btn btn-dark btn-hover">Blogları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        @foreach (var city in Model.Skip(2))
        {
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card h-100">
                    <img style="width: 100%; height: 200px; border-radius: 10px;" src="@city.ImageUrl" class="card-img-top" alt="@city.Name">
                    <div class="card-body">
                        <h5 class="card-title">@city.Name</h5>
                        <a href="@Url.Action("Blogs", "City", new { id = city.Id })" class="btn btn-dark btn-hover">Blogları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .btn-hover:hover {
        transform: scale(1.1);
        color: white;
    }
</style>



