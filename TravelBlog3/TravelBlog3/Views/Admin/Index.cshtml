@using TravelBlog3.Models
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Blog List</h2>
<br />
<table class="table table-bordered table-striped table-dark table-hover">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>User</th>
        <th>City</th>
        <th>Delete</th>
        <th>Update</th>
      
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.User.Username</td> 
            <td>@(item.City != null ? item.City.Name : "N/A")</td> 
            <td><a href="/Admin/DeleteBlog/@item.Id" class="btn btn-warning">Delete</a></td>
            <td><a href="/Admin/GetBlogById/@item.Id" class="btn btn-success">Update</a></td>
          
        </tr>
    }

</table>
<a href="/Admin/AddNewBlog" class="btn btn-primary">Add New Blog</a>
