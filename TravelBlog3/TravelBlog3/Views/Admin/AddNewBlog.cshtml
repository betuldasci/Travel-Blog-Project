@model TravelBlog3.Models.Blog
@{
    ViewBag.Title = "AddNewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add New Blog</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.ImageUrl)
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description, 15, 1, new { @class = "form-control" })
    <br />

    @Html.LabelFor(model => model.CityId, "City")
    @Html.DropDownList("CityId", (SelectList)ViewBag.CityId, "Select a City", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.CityId)
    <button class="btn btn-primary">Add Blog</button>
</form>

